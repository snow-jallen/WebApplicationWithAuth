@page
@model WebApplicationWithAuth.Pages.Parties.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Parties List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].StartsOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Party)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-partyName="@item.Name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartsOn)
                </td>
                <td>
                    @if (Model.IsAdmin)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> <span>|</span>
                    }
                    <a asp-page="./Details" asp-route-partyName="@item.Name">Details</a>
                    @if (Model.IsAdmin)
                    {
                        <span>|</span>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
