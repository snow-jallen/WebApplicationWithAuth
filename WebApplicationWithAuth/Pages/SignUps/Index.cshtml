@page
@model WebApplicationWithAuth.Pages.SignUps.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SignUp[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUp[0].Party)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SignUp) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Party.Id)
            </td>
            <td>
                @if (Model.CanEdit)
                {
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a><span> | </span>
                }
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                @if (Model.CanEdit)
                {
                    <span> | </span>
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
